<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.saonan.mapper.BlackListMapper">
	
	<!-- 通过传入用户编号来判断是否在黑名单 -->
	<select id="findBlackListById" parameterType="java.lang.String" resultType="cn.saonan.pojo.BlackList">
		select userid, blname, bl_card, operator_user, black_description, del_status from blacklist where userid = #{userId}
	</select>
	
</mapper>