isInstallActiveX = function(){
	var support = true;
    var install = 0;
    try {
    	var obj = new ActiveXObject("PaicEnc.Enc");        
        if (obj) {
        	install = 1;
        	delete obj;
        }
    } catch (ex) {    
    	
    }
	return install;
}

